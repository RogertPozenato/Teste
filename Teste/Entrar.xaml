<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste.Entrar"
             Title="Entrar"
             BackgroundColor="#4D5D39">

    <VerticalStackLayout
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center"
        Spacing="20"
        Padding="20">

        <Label Text="ENTRAR"
               HorizontalOptions="Center"
               FontSize="20"
               FontFamily="Canvas_Inline_Reg"
               TextColor="White" />

        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15">
            <Label Text="Telefone:" Grid.Column="0" FontSize="18" TextColor="White"/>
            <Entry Placeholder="Digite seu telefone" Grid.Column="1"
                   x:Name="TelefoneEntry"
                   BackgroundColor="#EBB591"
                   WidthRequest="250"/>
        </Grid>
        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15">
            <Label Text="Senha:" Grid.Column="0" FontSize="18" TextColor="White"/>
            <Entry Placeholder="Senha" IsPassword="True" Grid.Column="1"
                   x:Name="SenhaEntry"
                   BackgroundColor="#EBB591"
                   WidthRequest="250"/>
        </Grid>

        <!-- BotÃµes -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Voltar" Clicked="OnVoltarClicked"
                    WidthRequest="120" HeightRequest="50"
                    BackgroundColor="White" TextColor="Black" CornerRadius="10"/>
            <Button Text="Cadastrar" Clicked="OnCadastrarClicked"
                    WidthRequest="120" HeightRequest="50"
                    BackgroundColor="White" TextColor="Black" CornerRadius="10"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
