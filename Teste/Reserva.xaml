<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste.Reserva"
             Title="Reserva"
             BackgroundColor="#4D5D39">

    <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="30">

        <!-- Controle 1: 0 a 5 anos -->
        <VerticalStackLayout Spacing="10">
            <Label Text="0 A 5 ANOS" FontSize="18" HorizontalOptions="Center" TextColor="White"/>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Border Stroke="Gray" StrokeThickness="1" BackgroundColor="White" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25">
                    <Label Text="-" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMinusTapped1"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
                <Border BackgroundColor="#EBB591" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 10">
                    <Label x:Name="ZeroCinco" Text="0" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
                <Border Stroke="Gray" StrokeThickness="1" BackgroundColor="White" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25">
                    <Label Text="+" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPlusTapped1"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Controle 2: 6 a 12 anos -->
        <VerticalStackLayout Spacing="10">
            <Label Text="6 A 12 ANOS" FontSize="18" HorizontalOptions="Center" TextColor="White"/>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Border Stroke="Gray" StrokeThickness="1" BackgroundColor="White" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25">
                    <Label Text="-" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMinusTapped2"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
                <Border BackgroundColor="#EBB591" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 10">
                    <Label x:Name="SeisDoze" Text="1" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
                <Border Stroke="Gray" StrokeThickness="1" BackgroundColor="White" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25">
                    <Label Text="+" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPlusTapped2"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Controle 3: Mais de 12 anos -->
        <VerticalStackLayout Spacing="10">
            <Label Text="Adultos" FontSize="18" HorizontalOptions="Center" TextColor="White"/>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Border Stroke="Gray" StrokeThickness="1" BackgroundColor="White" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25">
                    <Label Text="-" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMinusTapped3"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
                <Border BackgroundColor="#EBB591" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 10">
                    <Label x:Name="Adulto" Text="2" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
                <Border Stroke="Gray" StrokeThickness="1" BackgroundColor="White" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25">
                    <Label Text="+" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPlusTapped3"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
            </HorizontalStackLayout>

            <Label
     Text=" Informação: crianças de 0 a 5 anos não paga e de 6 a 12 paga meio."
     Background="#422345"
     TextColor="White"
     HorizontalOptions="Center"
     ></Label>

            <VerticalStackLayout Padding="20" Spacing="15" >

                <Label Text="MORANGO:
                       R$ 45,50" 
                       HorizontalOptions="Center"
                       TextColor="White"/>
                <CheckBox x:Name="Morango"
                         Color="#EBB591"
                          WidthRequest="70"
                          HeightRequest="70"
                          />

                
                <Label Text="TRENZINHO/COLHE E PAGA 
                       R$ 15,00" 
                       HorizontalOptions="Center"
                       TextColor="White"/>
                <CheckBox x:Name="TC" 
                           Color="#EBB591"
                          WidthRequest="70"
                          HeightRequest="70"/>

                <Label Text="CAFÉ COMPLETO: 
                       R$ 65,00"
                       HorizontalOptions="Center"
                       TextColor="White"/>
                <CheckBox x:Name="CafeCompleto" 
                          Color="#EBB591"
                          WidthRequest="70"
                          HeightRequest="70"/>


                <Label Text="CAFÉ BÁSICO:
                       R$ 55,00" 
                       HorizontalOptions="Center"
                       TextColor="White"/>
                <CheckBox x:Name="CafeBasico"
                          Color="#EBB591"
                          WidthRequest="70"
                          HeightRequest="70"/>

                <Label x:Name="lblTotal" Text="VALOR TOTAL: R$ 00,00" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                <Button Text="FAZER RESERVA" Clicked="OnFazerReservaClicked" BackgroundColor="#B27C5D" WidthRequest="300"/>
                
            </VerticalStackLayout>
            

        </VerticalStackLayout>

    </VerticalStackLayout>
        </ScrollView>
</ContentPage>